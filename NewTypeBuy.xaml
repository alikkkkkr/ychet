<Window x:Class="prac4sharp.NewTypeBuy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prac4sharp"
        mc:Ignorable="d"
        Title="NewTypeBuy" Height="200" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="67*"/>
            <RowDefinition Height="57*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="введите тип записи" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" Height="33" Width="222"/>
        <TextBox x:Name="new_type_buy" Grid.Row="1" Margin="50,20,50,19"/>
        <Button x:Name="add_new_type" Grid.Row="2" Content="добавить" FontSize="20" Margin="225,12,225,12"/>
    </Grid>
</Window>
